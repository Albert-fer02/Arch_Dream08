# Set target for Red Team operations
set-target() {
    if [[ -n "$1" ]]; then
        export TARGET="$1"
        export LOCAL_IP=$(ip route get 8.8.8.8 | awk '{print $7}')
        export PUBLIC_IP=$(curl -s ifconfig.me)
        echo "üéØ Target set to: $TARGET"
        echo "üè† Local IP: $LOCAL_IP"
        echo "üåê Public IP: $PUBLIC_IP"
    else
        echo "Usage: set-target <target_ip_or_domain>"
    fi
}

# Quick port scan
portscan() {
    if [[ -n "$1" ]]; then
        echo "üîç Scanning ports on $1..."
        nmap -T4 -F "$1"

# ðŸŽ¯ FUNCIONES ADICIONALES ESPECÃFICAS
# =====================================================

# Funciones especÃ­ficas para Arch Linux
arch-update() {
    echo "ðŸ”„ Actualizando sistema Arch..."
    sudo pacman -Syu && {
        echo "âœ… Sistema actualizado"
        if command -v yay &>/dev/null; then
            echo "ðŸ”„ Actualizando paquetes AUR..."
            yay -Syu --noconfirm
        fi
    }
}

arch-clean() {
    echo "ðŸ§¹ Limpiando sistema Arch..."
    sudo pacman -Sc --noconfirm
    sudo pacman -Rns $(pacman -Qtdq) 2>/dev/null || echo "No hay paquetes huÃ©rfanos"
    if command -v yay &>/dev/null; then
        yay -Sc --noconfirm
    fi
    echo "âœ… Sistema limpiado"
}

arch-search() {
    if [[ -z "$1" ]]; then
        echo "Uso: arch-search <paquete>"
        return 1
    fi
    pacman -Ss "$1"
    if command -v yay &>/dev/null; then
        echo "\nðŸ” Resultados de AUR:"
        yay -Ss "$1"
    fi
}

# Funciones de desarrollo
devenv() {
    case "$1" in
        python|py)
            echo "ðŸ Configurando entorno Python..."
            python -m venv venv
            source venv/bin/activate
            pip install --upgrade pip
            echo "âœ… Entorno Python activado"
            ;;
        node|js)
            echo "ðŸ“¦ Configurando entorno Node.js..."
            npm init -y
            echo "âœ… Proyecto Node.js inicializado"
            ;;
        rust|rs)
            echo "ðŸ¦€ Configurando entorno Rust..."
            cargo init
            echo "âœ… Proyecto Rust inicializado"
            ;;
        go)
            echo "ðŸ¹ Configurando entorno Go..."
            go mod init $(basename $(pwd))
            echo "âœ… MÃ³dulo Go inicializado"
            ;;
        *)
            echo "Uso: devenv [python|node|rust|go]"
            echo "Entornos disponibles: python, node, rust, go"
            ;;
    esac
}

# Sistema de configuraciÃ³n rÃ¡pida
config-edit() {
    case "$1" in
        zsh|zshrc)
            ${EDITOR:-nvim} ~/.zshrc
            ;;
        zshlocal|local)
            ${EDITOR:-nvim} ~/.zshrc.local
            ;;
        nvim|vim)
            ${EDITOR:-nvim} ~/.config/nvim/init.lua 2>/dev/null || ${EDITOR:-nvim} ~/.vimrc
            ;;
        starship)
            ${EDITOR:-nvim} ~/.config/starship.toml
            ;;
        kitty)
            ${EDITOR:-nvim} ~/.config/kitty/kitty.conf
            ;;
        alacritty)
            ${EDITOR:-nvim} ~/.config/alacritty/alacritty.yml
            ;;
        tmux)
            ${EDITOR:-nvim} ~/.tmux.conf
            ;;
        *)
            echo "Configuraciones disponibles:"
            echo "  zsh, zshlocal, nvim, starship, kitty, alacritty, tmux"
            ;;
    esac
}

# Git workflow simplificado
git-workflow() {
    case "$1" in
        start)
            git checkout -b "feature/$2"
            echo "âœ… Rama feature/$2 creada"
            ;;
        finish)
            local current_branch=$(git branch --show-current)
            git checkout main || git checkout master
            git pull
            git merge "$current_branch"
            git branch -d "$current_branch"
            echo "âœ… Feature merge completado"
            ;;
        sync)
            git add .
            git commit -m "${2:-WIP: sync changes}"
            git push
            echo "âœ… Cambios sincronizados"
            ;;
        *)
            echo "Uso: git-workflow [start|finish|sync] <nombre>"
            echo "  start <nombre>  - Crear nueva feature branch"
            echo "  finish          - Merger y limpiar branch actual"
            echo "  sync [mensaje]  - Add, commit y push rÃ¡pido"
            ;;
    esac
}

# FunciÃ³n para lazy loading
lazy_load() {
    local cmd="$1"
    local init_cmd="$2"
    
    eval "$cmd() { unset -f $cmd; $init_cmd; $cmd \"\$@\"; }"
}

# Lazy loading para herramientas pesadas (ejemplos)

# Extract function for various archive types - Enhanced
extract() {
    [[ -f "$1" ]] || { echo "'$1' is not a valid file"; return 1 }
    case "$1" in
        *.tar.bz2) tar xjf "$1" ;;
        *.tar.gz)  tar xzf "$1" ;;
        *.bz2)     bunzip2 "$1" ;;
        *.rar)     unrar x "$1" ;;
        *.gz)      gunzip "$1"  ;;
        *.tar)     tar xf "$1"  ;;
        *.tbz2)    tar xjf "$1" ;;
        *.tgz)     tar xzf "$1" ;;
        *.zip)     unzip "$1"   ;;
        *.Z)       uncompress "$1" ;;
        *.7z)      7z x "$1"    ;;
        *.xz)      unxz "$1"    ;;
        *.exe)     cabextract "$1" ;;
        *.deb)     ar x "$1" && tar xf data.tar.* ;;
        *.rpm)     rpm2cpio "$1" | cpio -idmv ;;
        *)         echo "'$1': unrecognized file compression" ;;
    esac
}

# Compress function - Enhanced
compress() {
    [[ -n "$1" ]] || { echo "Usage: compress <file_or_directory>"; return 1 }
    local name="${1%/}"
    if [[ -d "$1" ]]; then
        tar -czf "${name}.tar.gz" "$1"
    else
        gzip "$1"
    fi
}

# Create directory and cd into it
mkcd() { mkdir -p "$1" && cd "$1" }

# Find and replace in files - Enhanced
findreplace() {
    [[ $# -eq 2 ]] || { echo "Usage: findreplace <search> <replace>"; return 1 }
    find . -type f -exec sed -i "s/$1/$2/g" {} +
}

# Quick backup of a file - Enhanced
backup() { cp "$1" "$1.backup.$(date +%Y%m%d_%H%M%S)" }

# System information function - Enhanced
sysstat() {
    echo "=== System Information ==="
    echo "Hostname: $(hostname)"
    echo "Kernel: $(uname -r)"
    echo "Uptime: $(uptime -p)"
    echo "Load Average: $(uptime | awk -F'load average:' '{print $2}')"
    echo "Memory Usage: $(free -h | awk '/^Mem:/ {printf "%s/%s (%.1f%%)", $3, $2, $3/$2*100}')"
    echo "Disk Usage: $(df -h / | awk 'NR==2 {printf "%s/%s (%s)", $3, $2, $5}')"
    echo "CPU Temperature: $(sensors 2>/dev/null | grep 'Core 0' | awk '{print $3}' || echo 'N/A')"
}

# Quick directory size - Enhanced
dirsize() { du -sh "$1" 2>/dev/null || echo "Directory not found" }

# Find files by extension - Enhanced
findext() { find . -name "*.$1" -type f }

# Count files by extension - Enhanced
countext() { find . -name "*.$1" -type f | wc -l }

# Quick search in files - Enhanced
search() { grep -r "$1" . --exclude-dir={.git,node_modules,.cache} }

# Create a new project directory - Enhanced
newproj() {
    [[ $# -eq 1 ]] || { echo "Usage: newproj <project_name>"; return 1 }
    mkcd "$1" && echo "Project '$1' created and entered"
}

# Quick note taking - Enhanced
note() {
    local note_file="$HOME/notes/$(date +%Y%m%d).md"
    mkdir -p "$(dirname "$note_file")"
    if [[ $# -eq 0 ]]; then
        $EDITOR "$note_file"
    else
        echo "$(date '+%H:%M'): $*" >> "$note_file"
        echo "Note added: $*"
    fi
}

# Quick todo - Enhanced
todo() {
    local todo_file="$HOME/todo.md"
    if [[ $# -eq 0 ]]; then
        $EDITOR "$todo_file"
    else
        echo "- [ ] $*" >> "$todo_file"
        echo "Todo added: $*"
    fi
}

# Quick calculator - Enhanced
calc() { echo "$*" | bc -l }

# Quick URL shortener - Enhanced
shorten() { curl -s "http://tinyurl.com/api-create.php?url=$1" }

# Quick QR code generator - Enhanced
qr() { echo "$1" | curl -F-=\<- qrenco.de }

# Quick password generator - Enhanced
passgen() { openssl rand -base64 "${1:-12}" | tr -d "=+/" | cut -c1-${1:-12} }

# Quick system update - Enhanced
sysupdate() {
    echo "üîÑ Updating system..."
    sudo pacman -Syu
    if command -v yay &> /dev/null; then
        echo "üîÑ Updating AUR packages..."
        yay -Sua
    elif command -v paru &> /dev/null; then
        echo "üîÑ Updating AUR packages..."
        paru -Sua
    fi
    echo "‚úÖ System updated!"
}

# Quick system maintenance - Enhanced
sysmaintenance() {
    echo "üîß Running system maintenance..."
    sudo pacman -Sc --noconfirm
    sudo journalctl --vacuum-time=7d
    sudo pacman -Rns $(pacman -Qtdq) 2>/dev/null || true
    echo "‚úÖ System maintenance completed!"
}

# Quick package search - Enhanced
pacsearch() {
    [[ -n "$1" ]] || { echo "Usage: pacsearch <package_name>"; return 1 }
    pacman -Ss "$1" | grep -E "^[a-z]" | head -20
}

# Quick package info - Enhanced
pacinfo() {
    [[ -n "$1" ]] || { echo "Usage: pacinfo <package_name>"; return 1 }
    pacman -Qi "$1" 2>/dev/null || pacman -Si "$1" 2>/dev/null || echo "Package not found"
}

# Quick system cleanup - Enhanced
sysclean() {
    echo "üßπ Cleaning system..."
    sudo pacman -Sc
    sudo journalctl --vacuum-time=7d
    sudo pacman -Rns $(pacman -Qtdq) 2>/dev/null || true
    echo "‚úÖ System cleaned!"
}


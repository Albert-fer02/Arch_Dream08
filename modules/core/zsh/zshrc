alias ports='netstat -tulanp'
alias listening='netstat -tlnp'
alias sysinfo='fastfetch 2>/dev/null || neofetch 2>/dev/null || uname -a'
alias diskusage='df -h | grep -vE "^Filesystem|tmpfs|cdrom"'
alias meminfo='free -h'
alias cpuinfo='lscpu'

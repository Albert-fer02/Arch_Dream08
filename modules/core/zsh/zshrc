# Get network information for Red Team operations
redteam-info() {
    echo "ğŸ¯ Red Team Network Information"
    echo "================================"
    echo "ğŸ  Local IP: $(ip route get 8.8.8.8 | awk '{print $7}')"
    echo "ğŸŒ Public IP: $(curl -s ifconfig.me)"
    echo "ğŸ”— Gateway: $(ip route | grep default | awk '{print $3}')"
    echo "ğŸ“¡ Interface: $(ip route get 8.8.8.8 | awk '{print $5}')"
    echo "ğŸ–¥ï¸  Hostname: $(hostname)"
    echo "ğŸ‘¤ User: $(whoami)"
    echo "â° Time: $(date)"
}

# Set target for Red Team operations
set-target() {
    if [[ -n "$1" ]]; then
        export TARGET="$1"
        export LOCAL_IP=$(ip route get 8.8.8.8 | awk '{print $7}')
        export PUBLIC_IP=$(curl -s ifconfig.me)
        echo "ğŸ¯ Target set to: $TARGET"
        echo "ğŸ  Local IP: $LOCAL_IP"
        echo "ğŸŒ Public IP: $PUBLIC_IP"
    else
        echo "Usage: set-target <target_ip_or_domain>"
    fi
}

# Quick port scan
portscan() {
    if [[ -n "$1" ]]; then
        echo "ğŸ” Scanning ports on $1..."
        nmap -T4 -F "$1"
    else
        echo "Usage: portscan <target>"
    fi
}

# Quick directory enumeration
direnum() {
    if [[ -n "$1" ]]; then
        echo "ğŸ“ Enumerating directories on $1..."
        gobuster dir -u "$1" -w /usr/share/wordlists/dirbuster/directory-list-2.3-medium.txt -t 50
    else
        echo "Usage: direnum <url>"
    fi
}

# Base64 encode/decode
b64e() { echo -n "$1" | base64 }
b64d() { echo -n "$1" | base64 -d }

# URL encode/decode
urle() { python3 -c "import urllib.parse; print(urllib.parse.quote('$1'))" }
urld() { python3 -c "import urllib.parse; print(urllib.parse.unquote('$1'))" }

# Hash functions
md5sum() { echo -n "$1" | md5sum | cut -d' ' -f1 }
sha1sum() { echo -n "$1" | sha1sum | cut -d' ' -f1 }
sha256sum() { echo -n "$1" | sha256sum | cut -d' ' -f1 }

# =====================================================
# ğŸ› ï¸ UTILITY FUNCTIONS
# =====================================================

# Extract function for various archive types
extract() {
    [[ -f "$1" ]] || { echo "'$1' is not a valid file"; return 1 }
    case "$1" in
        *.tar.bz2) tar xjf "$1" ;;
        *.tar.gz)  tar xzf "$1" ;;
        *.bz2)     bunzip2 "$1" ;;
        *.rar)     unrar x "$1" ;;
        *.gz)      gunzip "$1"  ;;
        *.tar)     tar xf "$1"  ;;
        *.tbz2)    tar xjf "$1" ;;
        *.tgz)     tar xzf "$1" ;;
        *.zip)     unzip "$1"   ;;
        *.Z)       uncompress "$1" ;;
        *.7z)      7z x "$1"    ;;
        *.xz)      unxz "$1"    ;;
        *.exe)     cabextract "$1" ;;
        *.deb)     ar x "$1" && tar xf data.tar.* ;;
        *.rpm)     rpm2cpio "$1" | cpio -idmv ;;
        *)         echo "'$1': unrecognized file compression" ;;
    esac
}

# Create directory and cd into it
mkcd() { mkdir -p "$1" && cd "$1" }

# Quick backup of a file
backup() { cp "$1" "$1.backup.$(date +%Y%m%d_%H%M%S)" }

# Quick password generator
passgen() { openssl rand -base64 "${1:-12}" | tr -d "=+/" | cut -c1-${1:-12} }

# Quick calculator
calc() { echo "$*" | bc -l }

# Quick system update
sysupdate() {
    echo "ğŸ”„ Updating system..."
    sudo pacman -Syu
    if command -v yay &> /dev/null; then
        echo "ğŸ”„ Updating AUR packages..."
        yay -Sua
    elif command -v paru &> /dev/null; then
        echo "ğŸ”„ Updating AUR packages..."
        paru -Sua
    fi
    echo "âœ… System updated!"
}


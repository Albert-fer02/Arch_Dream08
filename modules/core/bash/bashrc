# Red Team information function
redteam-info() {
    echo "üéØ Red Team Bash Configuration Loaded"
    echo "üí° Use 'sysinfo' to show system information"
    echo "üéØ Use 'set-target <ip>' to set your target"
    echo "üîß Use 'sysupdate' for system updates"
    echo "üßπ Use 'sysmaintenance' for system maintenance"
}

# Set target function
set-target() {
    if [ -z "$1" ]; then
        echo "‚ùå Usage: set-target <ip_address>"
        return 1
    fi
    export TARGET="$1"
    echo "üéØ Target set to: $TARGET"
}

# Show target function
show-target() {
    if [ -n "$TARGET" ]; then
        echo "üéØ Current target: $TARGET"
    else
        echo "‚ùå No target set. Use 'set-target <ip>' to set one."
    fi
}


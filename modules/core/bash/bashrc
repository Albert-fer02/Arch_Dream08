# =====================================================
# üöÄ BASH Configuration - Arch Linux Optimized
# =====================================================
# Optimized for performance and productivity
# =====================================================

# Fix locale at startup
export LANG=C.utf8
export LC_ALL=C.utf8

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# =====================================================
# ‚ö° PERFORMANCE OPTIMIZATIONS
# =====================================================

# Sistema de cach√© para inicio r√°pido
export BASH_STARTUP_CACHE="$HOME/.cache/bash_startup"
mkdir -p "$BASH_STARTUP_CACHE"

# Cach√© de PATH y comandos costosos
if [ -f "$BASH_STARTUP_CACHE/path_cache" ] && [ $(( $(date +%s) - $(stat -c %Y "$BASH_STARTUP_CACHE/path_cache") )) -lt 3600 ]; then
    source "$BASH_STARTUP_CACHE/path_cache"
else
    # C√°lculos de PATH y exports
    export PATH="$HOME/.local/bin:$HOME/.cargo/bin:$HOME/.bun/bin:$HOME/.npm-global/bin:/usr/local/bin:$PATH"
    echo "export PATH=\"$PATH\"" > "$BASH_STARTUP_CACHE/path_cache"
fi

# Disable flow control commands (keeps C-s from freezing everything)
stty -ixon

# Enable incremental history search with better performance
bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'
bind '"\C-r": "\C-a hstr -- \C-j"'     # HSTR binding for Ctrl-r
bind '"\C-xk": "\C-a hstr -k \C-j"'    # HSTR binding for kill history

# =====================================================
# ‚öôÔ∏è ENVIRONMENT & PATH
# =====================================================

# Editor Configuration
export EDITOR='nvim' VISUAL='nvim' BROWSER='firefox' TERMINAL='kitty'

# Locale already configured at startup

# PATH Configuration - Optimized order
export PATH="$HOME/.local/bin:$HOME/.cargo/bin:$HOME/.bun/bin:$HOME/.npm-global/bin:/usr/local/bin:$PATH"

# XDG Base Directory Specification
export XDG_CONFIG_HOME="$HOME/.config" 
export XDG_DATA_HOME="$HOME/.local/share" 
export XDG_CACHE_HOME="$HOME/.cache" 
export XDG_STATE_HOME="$HOME/.local/state"

# Development environment
export GOPATH="$HOME/go"
export PATH="$GOPATH/bin:$PATH"
export NODE_ENV=development

# =====================================================
# üé® COLORS & PROMPT
# =====================================================

# Colors with better contrast
export CLICOLOR=1
export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd

# =====================================================
# üöÄ STARSHIP PROMPT INITIALIZATION
# =====================================================

# Initialize Starship if available
if command -v starship &> /dev/null; then
    eval "$(starship init bash)"
else
    # Fallback prompt with git status
    parse_git_branch() {
        git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
    }
    
    # Enhanced color prompt with git integration
    PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[33m\]$(parse_git_branch)\[\033[00m\]\$ '
fi

